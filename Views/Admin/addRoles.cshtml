@model IEnumerable<RoleVM>
@{
    ViewData["Title"] = "Manage Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="container p-3">
        
<form method="post">
        <div class="row pt-4">
            <div class="col-6">
                <h3>@ViewBag.userName</h3>
            </div>
        </div>

        <input hidden id="userName" name="userName" value="@ViewBag.userName" />
        <input hidden id="userId" name="userId" value="@ViewBag.userId" />
        <input hidden id="jsonRoles" name="jsonRoles" />

        <table id="roleTable" class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        Role Id
                    </th>
                    <th scope="col">
                        Role Name
                    </th>
                    <th scope="col">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-primary">
                        <td scope="row" class="tId" width="30%">
                            @item.roleId
                        </td>
                        <td class="tName">
                            @item.roleName
                        </td>
                        <td>
                            <input type="checkbox" class="tCheck" @(item.useRole ? "checked" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center">
            <button type="submit" onclick="updateJsonFile()" class="btn btn-dark"
            style="width:150px;color: #FFD700;">Save</button>
        </div>
</form>

</div>


@section Scripts {
    <script src="~/js/addroles.js"></script>
}