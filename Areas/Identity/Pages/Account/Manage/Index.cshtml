@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}



<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
            </div>
            <div class="">
                <label asp-for="Input.FName" class="form-label mt-4"></label>
                <input asp-for="Input.FName" type="text" class="form-control" />
                <span asp-validation-for="Input.FName" class="text text-danger"> </span>
            </div>
            <div class="mt-4">
                <label asp-for="Input.LName" class="form-label"></label>
                <input asp-for="Input.LName" type="text" class="form-control" />
                <span asp-validation-for="Input.LName" class="text text-danger"> </span>
            </div>
            <div class="mt-4">
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.ProfilePicture" class="form-label mt-4"></label>
                <input asp-for="Input.ProfilePicture" class="form-control"
                       id="FormFile" type="file"
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])">
                <span asp-validation-for="Input.ProfilePicture" class="text text-danger"> </span>
            </div>
            <div>
                <a asp-page="./Email">
                    Change your email
                </a>
            </div>
            <div>

                <a asp-page="./ChangePassword">
                    Change your passwod
                </a>
            </div>

            <div class="mt-4 text-center">
                @if (Model.Input.ProfilePicture != null)
                {
                    <img id="profilePicture" alt="profile" class="w-50"
                         src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))" />
                }
                else
                {
                    <img id="profilePicture" class="w-50" alt="profile" src="/assets/night.jpg" />
                }
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary mt-4">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
